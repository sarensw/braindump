{
  "name": "braindump",
  "version": "0.4.0",
  "description": "Dump your brain",
  "private": "true",
  "scripts": {
    "clean": "electron-snowpack clean",
    "build": "electron-snowpack build",
    "dev": "electron-snowpack dev",
    "dist": "electron-builder",
    "dist:dir": "yarn dist --dir -c.compression=store -c.mac.identity=null",
    "try": "run-s clean build dist:dir",
    "pack": "cross-env NODE_ENV=production electron-builder"
  },
  "homepage": "./",
  "author": "Stephan Arenswald",
  "license": "UNLICENSED",
  "devDependencies": {
    "@redux-devtools/core": "^3.9.1",
    "@snowpack/plugin-dotenv": "^2.2.0",
    "@snowpack/plugin-postcss": "^1.4.3",
    "@snowpack/plugin-react-refresh": "^2.5.0",
    "@snowpack/plugin-typescript": "^1.2.1",
    "@types/adm-zip": "^0.4.34",
    "@types/dateformat": "^5.0.0",
    "@types/json-stringify-safe": "^5.0.0",
    "@types/luxon": "^2.0.8",
    "@types/styled-components": "^5.1.18",
    "@types/uuid": "^8.3.3",
    "autoprefixer": "^10.4.0",
    "concurrently": "^6.5.1",
    "cross-env": "^7.0.3",
    "electron": "^16.0.5",
    "electron-builder": "^22.14.5",
    "electron-builder-notarize": "^1.2.0",
    "electron-devtools-installer": "^3.2.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.5",
    "postcss-cli": "^9.1.0",
    "redux-devtools-extension": "^2.13.9",
    "snowpack": "^3.8.8",
    "tailwindcss": "^2.2.19",
    "ts-standard": "^11.0.0",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.3.1",
    "@reduxjs/toolkit": "^1.7.1",
    "adm-zip": "^0.5.9",
    "dateformat": "^5.0.2",
    "dexie": "^3.2.0",
    "electron-log": "^4.4.3",
    "electron-snowpack": "^0.12.2",
    "events": "^3.3.0",
    "json-stringify-safe": "^5.0.1",
    "luxon": "^2.2.0",
    "monaco-editor": "^0.31.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-hotkeys-hook": "^3.4.4",
    "react-is": "^17.0.2",
    "react-redux": "^7.2.6",
    "shade-blend-color": "^1.0.0",
    "styled-components": "^5.3.3",
    "use-async-effect": "^2.2.3",
    "uuid": "^8.3.2",
    "yaml": "^1.10.2"
  },
  "build": {
    "appId": "com.featureninjas.braindump",
    "productName": "Braindump",
    "extends": "electron-snowpack/config/electron-builder.js",
    "afterSign": "build/notarize.js",
    "copyright": "Copyright @ 2021 ${author}",
    "files": [
      {
        "from": ".",
        "filter": [
          "postcss.config.js"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "build/logo.icns",
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "type": "distribution",
      "hardenedRuntime": "true"
    }
  }
}
